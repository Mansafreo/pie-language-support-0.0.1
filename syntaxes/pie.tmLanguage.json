{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PIE",
  "scopeName": "source.pie",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#system-functions"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.pie",
          "match": "//.*$"
        },
        {
          "name": "comment.block.pie",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "comment.block.pie",
              "match": "."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "storage.type.pie",
          "match": "\\b(int|float|string|char|bool)\\b"
        },
        {
          "name": "keyword.control.pie",
          "match": "\\b(if|else|for|while|do)\\b"
        },
        {
          "name": "constant.language.pie",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "system-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.pie",
          "match": "\\b(input|output)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "string.quoted.double.pie",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.pie",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.pie",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.pie",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "constant.numeric.float.pie",
          "match": "\\b[0-9]+\\.[0-9]*\\b"
        },
        {
          "name": "constant.numeric.integer.pie",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.pie",
          "match": "(==|!=|>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.logical.pie",
          "match": "(&&|\\|\\|)"
        },
        {
          "name": "keyword.operator.assignment.pie",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.pie",
          "match": "[+\\-*/%]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.pie",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.pie",
          "match": ";"
        },
        {
          "name": "punctuation.separator.pie",
          "match": ","
        },
        {
          "name": "punctuation.section.braces.pie",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.brackets.pie",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.parens.pie",
          "match": "[()]"
        }
      ]
    }
  }
}